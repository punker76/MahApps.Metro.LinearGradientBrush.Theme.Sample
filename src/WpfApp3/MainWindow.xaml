<mah:MetroWindow x:Class="WpfApp3.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:wpfApp3="clr-namespace:WpfApp3"
                 mc:Ignorable="d"
                 Title="MainWindow" Height="450" Width="800">
  <Grid>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <Button Content="Blue on White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5"
              Click="BlueOnWhite" />
      <Button Content="Red on Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5"
              Click="RedOnBlack" />
      <wpfApp3:TestUserControl />
    </StackPanel>

  </Grid>
</mah:MetroWindow>